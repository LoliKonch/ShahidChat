<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainBackground"
            maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="400.0"
            prefWidth="600.0"
            xmlns="http://javafx.com/javafx/18.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="chat.shahid_chat.SignInController">

    <Pane fx:id="sideBackground"
          layoutX="50.0"
          layoutY="25.0"
          prefHeight="350.0"
          prefWidth="500.0">

        <TextField fx:id="loginField"
                   layoutX="150.0"
                   layoutY="104.0"
                   prefHeight="32.0"
                   prefWidth="200.0"
                   promptText="Login"
        />

        <PasswordField fx:id="passwordField"
                       layoutX="150.0"
                       layoutY="159.0"
                       prefHeight="32.0"
                       prefWidth="200.0"
                       promptText="Password"
        />

        <Button fx:id="signInButton"
                layoutX="150.0"
                layoutY="214.0"
                mnemonicParsing="false"
                prefHeight="32.0"
                prefWidth="200.0"
                text="Sign in"
                textAlignment="CENTER"
        />

        <Label fx:id="title"
               layoutX="206.0"
               layoutY="40.0"
               prefHeight="34.0"
               prefWidth="89.0"
               text="SIGN IN"
               textAlignment="CENTER">
            <font>
                <Font size="23.0" />
            </font>
        </Label>

        <Hyperlink fx:id="forgotPassword"
                 layoutX="185.0"
                 layoutY="269.0"
                 text="Forgot your password?"
                 textAlignment="CENTER"
        />

        <Button fx:id="registrationButton"
              layoutX="393.0"
              layoutY="28.0"
              mnemonicParsing="false"
              text="Register"
        />
    </Pane>
</AnchorPane>
